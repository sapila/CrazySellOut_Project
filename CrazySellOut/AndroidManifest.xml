<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crazysellout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LogInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserSide.UserSideActivity"
            android:label="@string/title_activity_user_side" >
        </activity>
        <activity
            android:name=".storeside.StoreSideActivity"
            android:label="@string/title_activity_store_side" >
        </activity>
        <activity
            android:name="com.example.crazysellout.passwordValidation.AccountCreationActivity"
            android:label="@string/title_activity_account_creation" >
        </activity>
    </application>

</manifest>
